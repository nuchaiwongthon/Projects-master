<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <ImageView
                android:id="@+id/backBtnV21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_action_back"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/kanit_light"
                android:text="วิเคราะห์โรคพืช"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="เลือกอาการที่ต้องการวิเคราะห์ ?"
                    android:textColor="#000000"
                    android:textSize="26dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <CheckBox
                        android:id="@+id/Cbtn21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="15dp"
                        android:checked="false"
                        android:fontFamily="@font/kanit_extralight"
                        android:text=""
                        android:textSize="22dp" />
                    <Button
                        android:id="@+id/show21"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Cbtn21"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/shape_buttonadd"
                        android:fontFamily="@font/kanit_extralight"
                        android:gravity="center"
                        android:text="ดูรูปภาพ"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/Cbtn22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:checked="false"
                        android:fontFamily="@font/kanit_extralight"
                        android:text=""
                        android:textSize="22dp" />

                    <Button
                        android:id="@+id/show22"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Cbtn22"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/shape_buttonadd"
                        android:fontFamily="@font/kanit_extralight"
                        android:gravity="center"
                        android:text="ดูรูปภาพ"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnMain1"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shape_buttonadd"
                        android:fontFamily="@font/kanit_light"
                        android:text="หน้าหลัก"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp" />

                    <Button
                        android:id="@+id/btnAssert21"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shape_buttonadd"
                        android:fontFamily="@font/kanit_light"
                        android:text="ถัดไป"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>