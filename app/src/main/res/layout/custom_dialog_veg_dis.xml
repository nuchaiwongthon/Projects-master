<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/DetailImage"
                    android:layout_width="match_parent"
                    android:layout_height="512px"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/col1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="รหัส : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/DetailVegDisID"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/col2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="ชื่อโรค : "
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/DetailVegName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/col3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/kanit_light"
                    android:layout_marginTop="5dp"
                    android:text="ส่วนที่ติดโรค : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/DetailVegArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/col4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="สาเหตุของโรค : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/DetailVegCause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/col5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="อาการของโรค 1 : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/DetailVegSyndrome1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/col6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="อาการของโรค 2 : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/DetailVegSyndrome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="1"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:padding="2dp"
                android:text="วิธีป้องกัน : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/DetailVegProtect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />
            <TextView
                android:id="@+id/col7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:padding="2dp"
                android:text="วิธีกำจัด : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/DetailVegRemedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />
            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/kanit_light"
                android:gravity="center"
                android:text=" ตกลง "
                android:textColor="#000000"
                android:textSize="14dp" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>



