<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/DetailVegNameTH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/kanit_light"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/DetailVegImage"
                    android:layout_width="match_parent"
                    android:layout_height="512px"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/col3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/kanit_light"
                    android:layout_marginTop="5dp"
                    android:text="ชื่อสามัญ : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/DetailNameCM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/col4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="ชื่อวิทยาศาสตร์ : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/DetailNameSC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/col5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="ลักษณะ : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/DetailVegStructure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/col6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="คุณค่าทางอาหาร : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/DetailVegNutrient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="1"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:padding="2dp"
                android:text="วิธีปลูก : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/DetailVegPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:padding="2dp"
                android:text="วิธีดูแลรักษา : "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/DetailVegTreatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/kanit_extralight"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"

                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/DetailVegImageQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/kanit_light"
                android:gravity="center"
                android:text=" ตกลง "
                android:textColor="#000000"
                android:textSize="14dp" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>



